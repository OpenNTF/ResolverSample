<?xml version="1.0" encoding="UTF-8"?>
<portlet-app id="com.ibm.portal.samples.resolver.samples.portlet.client"
	xmlns:portal="http://www.ibm.com/xmlns/prod/websphere/portal/publicparams"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">

	<!-- include the portlets by reference. The reference is relative to the 
		BASE_DIR parameter in the XSLT. -->
	<portlet href="resolver/client/ResolverPortlet.xml" />

	<public-render-parameter>
		<description>Parameter to trigger URI resolution</description>
		<identifier>uri</identifier>
		<!-- See com.ibm.portal.PortalPublicRenderParameters.QNAME_URI -->
		<qname>portal:uri</qname>
	</public-render-parameter>

</portlet-app>